{
  "name": "ai-readme-mcp",
  "version": "0.4.0",
  "description": "MCP server for managing AI_README.md files in projects",
  "type": "module",
  "bin": {
    "ai-readme-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "docs/templates"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "simple-git": "^3.22.0",
    "unified": "^11.0.4",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "ai",
    "readme",
    "context",
    "claude",
    "llm",
    "model-context-protocol"
  ],
  "author": "Draco Cheng <draco.cheng@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Draco-Cheng/ai-readme-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Draco-Cheng/ai-readme-mcp/issues"
  },
  "homepage": "https://github.com/Draco-Cheng/ai-readme-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
